<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Home Page</title>
    <style>
      button {
        background-color: forestgreen;
        color: white;
        border-radius: 5px;
        padding: 0.5rem;
        border-color: white;
      }

      button:hover {
        cursor: pointer;
        background-color: yellowgreen;
      }
    </style>
  </head>
  <body>
    <h3>Hi there. Welcome to CocoF Channel.</h3>
    <form method="POST" action="/setup-profile">
      <button type="submit">Setup Profile</button>
    </form>
    <br />
    <form method="POST" action="/setup-persistent-menu">
      <button type="submit">Setup Persistent Menu</button>
    </form>
    <!-- Messenger Chat plugin Code -->
    <div id="fb-root"></div>

    <!-- Your Chat plugin code -->
    <div id="fb-customer-chat" class="fb-customerchat"></div>

    <script>
      var chatbox = document.getElementById("fb-customer-chat");
      chatbox.setAttribute("page_id", "105894641742096");
      chatbox.setAttribute("attribution", "biz_inbox");
      window.fbAsyncInit = function () {
        FB.init({
          xfbml: true,
          version: "v11.0",
        });
      };

      (function (d, s, id) {
        var js,
          fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://connect.facebook.net/vi_VN/sdk/xfbml.customerchat.js";
        fjs.parentNode.insertBefore(js, fjs);
      })(document, "script", "facebook-jssdk");
    </script>
  </body>
</html>
